---
import Navigation from "@components/Navigation.astro";
import Footer from "@components/Footer.astro";
import getMetaTags from "@modules/getMetaTags";

export interface Props {
  title: string;
  description?: string;
}

const { title, description } = getMetaTags(Astro.props.title, Astro.props.description);

// Get theme from cookie
const theme = Astro.cookies.get("theme")?.value || "system";
// Apply class: "light" forces light, "dark" forces dark, "system" = no class (uses media query)
const themeClass = theme === "system" ? "" : theme;
---

<!doctype html>
<html lang="en" class={themeClass}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <meta name="og:title" content={title} />
    <meta name="og:description" content={description} />
  </head>
  <body class="min-w-fold bg-gray-100 text-neutral-900 dark:bg-neutral-900 dark:text-white">
    <Navigation />
    <div class="px-3 py-6">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  pre code {
    display: block;
    white-space: pre-wrap;
  }
</style>
