---
import ChevronsLeft from "@components/icons/ChevronsLeft.astro";
import ChevronLeft from "@components/icons/ChevronLeft.astro";
import ChevronRight from "@components/icons/ChevronRight.astro";
import ChevronsRight from "@components/icons/ChevronsRight.astro";

interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;
const hasPrevPage = currentPage > 1;
const hasNextPage = currentPage < totalPages;

// Build URL with page parameter, handling existing query params
const buildPageUrl = (page: number) => {
  const separator = baseUrl.includes("?") ? "&" : "?";
  return `${baseUrl}${separator}page=${page}`;
};
---

{totalPages > 1 && (
  <nav class="flex items-center justify-center gap-1 text-sm">
    <a
      href={buildPageUrl(1)}
      class:list={[
        "px-2 py-1 rounded",
        currentPage === 1
          ? "text-neutral-400 dark:text-neutral-600 pointer-events-none"
          : "text-blue-600 hover:bg-neutral-100 dark:text-blue-400 dark:hover:bg-neutral-800"
      ]}
      aria-label="First page"
      aria-disabled={currentPage === 1}
    >
      <ChevronsLeft />
    </a>
    <a
      href={buildPageUrl(currentPage - 1)}
      class:list={[
        "px-2 py-1 rounded",
        !hasPrevPage
          ? "text-neutral-400 dark:text-neutral-600 pointer-events-none"
          : "text-blue-600 hover:bg-neutral-100 dark:text-blue-400 dark:hover:bg-neutral-800"
      ]}
      aria-label="Previous page"
      aria-disabled={!hasPrevPage}
    >
      <ChevronLeft />
    </a>
    <span class="px-3 py-1 text-neutral-600 dark:text-neutral-400">
      {currentPage} / {totalPages}
    </span>
    <a
      href={buildPageUrl(currentPage + 1)}
      class:list={[
        "px-2 py-1 rounded",
        !hasNextPage
          ? "text-neutral-400 dark:text-neutral-600 pointer-events-none"
          : "text-blue-600 hover:bg-neutral-100 dark:text-blue-400 dark:hover:bg-neutral-800"
      ]}
      aria-label="Next page"
      aria-disabled={!hasNextPage}
    >
      <ChevronRight />
    </a>
    <a
      href={buildPageUrl(totalPages)}
      class:list={[
        "px-2 py-1 rounded",
        currentPage === totalPages
          ? "text-neutral-400 dark:text-neutral-600 pointer-events-none"
          : "text-blue-600 hover:bg-neutral-100 dark:text-blue-400 dark:hover:bg-neutral-800"
      ]}
      aria-label="Last page"
      aria-disabled={currentPage === totalPages}
    >
      <ChevronsRight />
    </a>
  </nav>
)}
